---
import '../styles/global.css';
---


<div class="login-box">
    <h1>login with github</h1>
    
    <div class="login-button">
        <svg 
            class="icon" 
            viewBox="0 0 16 16" 
            aria-hidden="true" 
            width="128" 
            height="128" 
            id="login"
        >
            <path d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"></path>
        </svg>
    </div>
</div>

<script>
    const { signIn, }= await import("auth-astro/client")

    const signin_icon = document.querySelector("#login");

    signin_icon?.addEventListener("click", () => signinToGitHub());

    function signinToGitHub() {
        signIn("github")
        console.log("clicked")
    }
</script>

<!-- <button id="logout">Logout</button> -->
<!-- document.querySelector("#logout").onclick = () => signOut() -->

<style>

    .login-box {
        background-color: var(--skill-card-colour);
        text-align: center;
        border-radius: 2em;
        transition: 250ms;
    }

    .login-box:hover {
        transform: translate(0, 1em);
        box-shadow: 10px 10px 8px #000000;
    }

    .login-box h1 {
        padding-top: 1em;
        padding-bottom: 1em;
        text-align: center;
        transition: 250ms;
    }

    .login-box:hover h1 {
        background : linear-gradient(
                -45deg, 
                #ff0000, 
                #ffbc7e, 
                #fcff4e, 
                #27ff88,
                #27ffff,
                #1e0ff5,
                #9e27ff
            );
            background-size: 300% 300%;
            -webkit-background-clip: text;
            background-clip: text;
            color: transparent;
            animation: gradient 2s linear infinite reverse;
    }
    
    .login-box .login-button {
        padding-bottom: 1em;
    }

    .login-box .login-button .icon {
        fill: var(--title-colour);
        transition: 250ms;
    }

    .login-box:hover .login-button .icon {
        fill: aqua;
        transform: scale(1.1);
    }


</style>